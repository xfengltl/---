extends ../layout 
 
append css
  link(href='/css/blog.css', rel='stylesheet')
  link(href="/components/font-awesome/css/font-awesome.css", rel="stylesheet")
block main
  block header
    .blog-masthead
      .container
        nav.blog-nav.pull-left
          if pageName === '/'
            a.blog-nav-item.active(href='/') 首页
          else
            a.blog-nav-item(href='/') 首页

          if pageName === '/about'
            a.blog-nav-item.active(href='/about') 关于
          else
            a.blog-nav-item(href='/about') 关于

          if pageName === '/contact'
            a.blog-nav-item.active(href='/contact') 联系
          else
            a.blog-nav-item(href='/contact') 联系
 
        form.navbar-form.pull-right(method="get", action="/posts/")
          input.form-control(type="text",name="keyword",placeholder="文章搜索...")
         
  .container
    .row
      .col-sm-8.blog-main
        != messages()
        block content
      .col-sm-3.col-sm-offset-1.blog-sidebar
        .sidebar-module
            h4 文章分类
            ol.list-unstyled
              each category in categories
                li
                  a(href="/posts/category/" + category.name, target="_blank")
                    = category.name
